<h1> New User </h1>
<div class="row justify-content-md-center">
    <div class="col-sm-6">
        <%= form_for :user, url: users_path do |f| %>
          
          <p>
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </p>
         
          <p>
            <%= f.label :email %><br>
            <%= f.text_area :email %>
          </p>
         
          <p>
            <%= f.submit %>
          </p>
        <% end %>
    </div>
</div>
<%= link_to 'Back', users_path %>